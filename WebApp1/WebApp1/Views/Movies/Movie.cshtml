@model WebApp1.Models.Movie
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release date: @Model.ReleaseDate.ToString("dd/MM/yyyy")</li>
    <li>Date Added: @Model.DateAdded.ToString("dd/MM/yyyy")</li>
    <li>Number in stock: @Model.NumberInStock</li>
</ul>